<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dmportal">

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 允许程序GPS 定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 允许程序打开摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEM" />

    <application
        android:name="com.example.dmportal.MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Main_AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup,android:theme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.example.dmportal.welcomeActivity.SplashActivity"
            android:theme="@style/Main_AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.dmportal.main.LoginActivity" >
        </activity>
        <activity
            android:name="com.example.dmportal.main.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing"
            tools:targetApi="cupcake" />
        <activity android:name="com.example.dmportal.webview.ui.WebViewActivity" />
        <activity android:name="com.example.dmportal.appstore.LeaveActivity" />
        <activity android:name="com.example.dmportal.appstore.SubjectTableActivity" />
        <activity android:name="com.example.dmportal.appstore.ui.LeaveMainActivity" />
        <activity android:name="com.example.dmportal.appstore.ui.GroupMainActivity" />
        <activity android:name="com.example.dmportal.appstore.GroupSearchActivity" />
        <activity android:name="com.example.dmportal.appstore.LeaveListActivity" />
        <activity android:name="com.example.dmportal.appstore.LeaveInfoDetailActivity" />
        <activity android:name="com.example.dmportal.appstore.ApprovalLeaveInfoActivity" />
        <activity android:name="com.example.dmportal.main.userSettingActivity.ForgetPwdActivity" />
        <activity android:name="com.example.dmportal.main.userSettingActivity.ChangePwdActivity" />
        <activity android:name="com.example.dmportal.main.userSettingActivity.PhoneBindActivity" />
        <activity android:name="com.example.dmportal.appstore.ListSearchActivity" />
        <activity android:name="com.example.dmportal.main.userSettingActivity.UserSettingActivity" />
        <activity
            android:name="com.example.dmportal.appstore.LeaveTextActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity android:name="com.example.dmportal.main.userSettingActivity.UserInfoActivity" />
        <activity android:name="com.example.dmportal.main.userSettingActivity.FeedBackActivity" />
        <activity android:name="com.example.dmportal.main.userSettingActivity.AboutActivity" />
        <activity android:name="com.example.dmportal.appstore.leaveSettingUI.LeaveSignActivity" />
        <activity
            android:name="com.example.dmportal.appstore.leaveSettingUI.SignatureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape" />
        <activity android:name="com.example.dmportal.appstore.leaveSettingUI.AuthoritySettingActivity" />
        <activity android:name="com.example.dmportal.appstore.leaveSettingUI.ApplyLeAutActivity" />
        <activity android:name="com.example.dmportal.appstore.AppLyListActivity" />
        <activity android:name="com.example.dmportal.appstore.ApprovalApplyInfoActivity" />
        <activity android:name="com.example.dmportal.appstore.ApplyInfoActivity" />
        <activity android:name="com.example.dmportal.appstore.leaveSettingUI.AuthorityDeleteActivity" android:windowSoftInputMode="stateHidden|adjustResize">
            <!--android:windowSoftInputMode="stateHidden|adjustPan"-->
        </activity>

        <receiver
            android:name="com.example.dmportal.appstore.receiver.MyReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.REGISTRATION" /> <!-- Required  用户注册SDK的intent -->
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED" /> <!-- Required  用户接收SDK消息的intent -->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED" /> <!-- Required  用户接收SDK通知栏信息的intent -->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED" /> <!-- Required  用户打开自定义通知栏的intent -->
                <action android:name="cn.jpush.android.intent.CONNECTION" /> <!-- 接收网络变化 连接/断开 since 1.6.3 -->
                <category android:name="com.last.design.dmportal" />
            </intent-filter>
        </receiver>

        <!-- User defined.  For test only  用户自定义接收消息器,3.0.7开始支持,目前新tag/alias接口设置结果会在该广播接收器对应的方法中回调 -->
        <receiver android:name="com.example.dmportal.appstore.receiver.MyJPushMessageReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE" />
                <category android:name="com.last.design.dmportal" />
            </intent-filter>
        </receiver>
    </application>

</manifest>