<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    android:background="@color/back_gray"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    >
    <com.definesys.dmportal.commontitlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        app:titlebar_bg_color="@color/customer_title"
        android:layout_height="?attr/titlebar_height">
    </com.definesys.dmportal.commontitlebar.CustomTitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:layout_marginTop="12dp"
                android:id="@+id/absence_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_layout"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/image_share"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/img_icon"
                        android:layout_width="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_height="30dp"
                         />
                    <TextView
                        android:text="@string/share_img"
                        android:textColor="@color/black"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:id="@+id/pdf_share"
                    android:layout_marginStart="1dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/pdf_icon"
                        android:layout_marginStart="8dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="@string/share_pdf"
                        android:textColor="@color/black"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
