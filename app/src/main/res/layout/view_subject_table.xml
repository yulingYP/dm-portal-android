<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hello_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/table_hello_text_drawable"
            android:padding="10dp"
            android:text="@string/help_tip"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/current_week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingBottom="4dp"
            android:text="@string/select_subject_count"
            android:textColor="@color/color_orange" />
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal"
            android:background="@color/back_gray"
            android:padding="4px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pre_week"
                android:text="@string/pre_week"
                android:padding="6dp"
                android:background="@color/white"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="4px"
                android:id="@+id/current_show_layout"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cur_show"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:text="@string/current_show_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/next_week"
                android:text="@string/next_week"
                android:layout_marginStart="4px"
                android:padding="6dp"
                android:background="@color/white"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TableLayout
            android:stretchColumns="*"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:background="@color/back_gray"
            android:layout_width="wrap_content"
            android:id="@+id/subject_table"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="4px"
                    android:layout_marginBottom="4px"
                    android:layout_marginStart="4px"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/lesson"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Monday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Tuesday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Wednesday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Thursday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Friday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Saturday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Sunday"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="4px"
                        android:textColor="@color/black" />
                </LinearLayout>

            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:layout_width="0dp"
                    android:id="@+id/first_layout"
                    android:layout_weight="1"
                    android:layout_marginStart="4px"
                    android:layout_marginBottom="4px"
                    android:layout_height="match_parent"
                    layout="@layout/item_table_subject_row">
                </include>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:layout_width="0dp"
                    android:id="@+id/second_layout"
                    android:layout_weight="1"
                    android:layout_marginStart="4px"
                    android:layout_marginBottom="4px"
                    android:layout_height="match_parent"
                    layout="@layout/item_table_subject_row">
                </include>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:layout_width="0dp"
                    android:id="@+id/third_layout"
                    android:layout_weight="1"
                    android:layout_marginStart="4px"
                    android:layout_marginBottom="4px"
                    android:layout_height="match_parent"
                    layout="@layout/item_table_subject_row">
                </include>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:layout_width="0dp"
                    android:id="@+id/fourth_layout"
                    android:layout_weight="1"
                    android:layout_marginStart="4px"
                    android:layout_marginBottom="4px"
                    android:layout_height="match_parent"
                    layout="@layout/item_table_subject_row">
                </include>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:layout_width="0dp"
                    android:id="@+id/fifth_layout"
                    android:layout_weight="1"
                    android:layout_marginStart="4px"
                    android:layout_marginBottom="4px"
                    android:layout_height="match_parent"
                    layout="@layout/item_table_subject_row">
                </include>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:layout_width="0dp"
                    android:id="@+id/sixth_layout"
                    android:layout_weight="1"
                    android:layout_marginStart="4px"
                    android:layout_marginBottom="4px"
                    android:layout_height="match_parent"
                    layout="@layout/item_table_subject_row">
                </include>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/confirm_text"
                android:text="@string/confirm"
                android:padding="8dp"
                android:textColor="@color/blue"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/confirm_text"
                android:layout_marginEnd="20dp"
                android:padding="8dp"
                android:text="@string/cancel"
                android:textColor="@color/blue" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>