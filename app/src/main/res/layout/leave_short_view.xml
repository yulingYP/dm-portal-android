<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/short_leave_des"
            android:layout_gravity="center"
            android:text="@string/leave_short_des"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@color/black"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/name"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="68dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/name_text"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/stuId"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/stuId_text"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/leave_reason"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="68dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/leave_reason"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="153dp"
                android:layout_height="match_parent" />

            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:text="@string/sub_time"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/submit_time"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:padding="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/leader_sign_text"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="68dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginStart="1dp"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/approval_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="bottom"
                        android:gravity="end"
                        android:id="@+id/sign_text"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:id="@+id/sign_img"
                        android:layout_width="wrap_content"
                        android:maxWidth="150dp"
                        android:maxHeight="50dp"
                        android:minHeight="30dp"
                        android:minWidth="100dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="bottom"
                        android:paddingBottom="8dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:layout_width="20dp"
                        android:id="@+id/progressBar"
                        android:layout_gravity="center"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/sign_time"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:text="@string/date_type_6"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:text="@string/leave_short_des_2"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@color/black"
            android:padding="1dp"
            android:layout_width="260dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/name"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/name_copy"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:layout_width="260dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/stuId"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/stuId_copy"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:layout_width="260dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/leave_reason"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/reason_copy"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:layout_width="260dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/leave_time"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/time_copy"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginStart="1dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>