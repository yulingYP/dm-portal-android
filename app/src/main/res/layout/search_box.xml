<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/bgd_search_msg_ctc">

        <ImageView
            android:id="@+id/search_search"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/search_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/color_bgd_grey"
            android:hint="请输入搜索内容"
            android:iconifiedByDefault="false"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:maxEms="50"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_deep_gray"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/clear_search"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/clear"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
