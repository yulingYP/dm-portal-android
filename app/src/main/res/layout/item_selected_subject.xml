<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_layout"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <View
        android:background="@color/back_gray"
        android:layout_width="match_parent"
        android:layout_height="2px">

    </View>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/count_text"
           android:text="@string/subject_count_tip"
           android:gravity="start|center"
           android:textColor="@color/order_color"
           android:padding="4dp"
           android:textSize="16sp"
           android:layout_marginStart="24dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/cursor_text"
               android:text="课程名"
               android:layout_toEndOf="@+id/count_text"
               android:paddingTop="4dp"
               android:paddingStart="4dp"
               android:paddingEnd="4dp"
               android:textSize="16sp"
               android:layout_marginEnd="20dp"
               android:textColor="@color/black"
               android:gravity="start|center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/time_text"
               android:text="@string/selected_subject_info"
               android:layout_toEndOf="@+id/count_text"
               android:layout_below="@+id/cursor_text"
               android:paddingBottom="4dp"
               android:paddingStart="4dp"
               android:paddingEnd="4dp"
               android:textSize="16sp"
               android:layout_marginRight="40dp"
               android:textColor="@color/black"
               android:gravity="start|center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
   </RelativeLayout>
    <View
        android:id="@+id/bottom_line"
        android:background="@color/back_gray"
        android:layout_width="match_parent"
        android:layout_height="2px">
    </View>
</LinearLayout>